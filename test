import json

# Read the JSON file
with open('data.json') as f:
    data = json.load(f)

# Create a dictionary to store merged data
merged_data = {}

# Iterate over the data and merge the dictionaries with the same "name" value
for item in data:
    name = item['name']
    if name not in merged_data:
        merged_data[name] = item
    else:
        merged_data[name].update(item)

# Convert the merged data to a list
merged_list = list(merged_data.values())

# Write the merged data to a new JSON file
with open('merged_data.json', 'w') as f:
    json.dump(merged_list, f, indent=4)
